{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.jsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}