{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": false,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
        "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.jsx"
    ],
    "exclude": [
        "node_modules"
    ]
}